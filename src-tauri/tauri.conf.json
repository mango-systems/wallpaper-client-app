{
	"build": {
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build",
		"devPath": "http://localhost:1420",
		"distDir": "../build",
		"withGlobalTauri": false
	},
	"package": {
		"productName": "MSM Wallpaper Browser",
		"version": "1.1.0"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"fs": {
				"all": true,
				"copyFile": false,
				"createDir": false,
				"exists": false,
				"readDir": false,
				"readFile": false,
				"removeDir": false,
				"removeFile": false,
				"renameFile": false,
				"scope": ["$DOWNLOAD/*"],
				"writeFile": true
			},
			"notification": {
				"all": true
			},
			"shell": {
				"all": true,
				"sidecar": true,
				"scope": [
					{
						"name": "gnome-wallpaper-dark",
						"cmd": "gsettings",
						"args": ["set", "org.gnome.desktop.background", "picture-uri-dark", { "validator": "\\S+" }]
					},
					{
						"name": "kde-set",
						"cmd": "plasma-apply-wallpaperimage",
						"args": [{ "validator": "\\S+" }]
					},
					{ "name": "binaries/setWinWallpaper", "sidecar": true, "args": [{ "validator": "\\S+" }] }
				]
			},
			"path": {
				"all": true
			},
			"window": {
				"all": false,
				"close": true,
				"hide": true,
				"show": true,
				"maximize": true,
				"minimize": true,
				"unmaximize": true,
				"unminimize": true,
				"startDragging": true
			  }
		},
		"bundle": {
			"active": true,
			"category": "Utility",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": ["binaries/setWinWallpaper"],
			"icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
			"identifier": "com.msmwallpaperclient.dev",
			"longDescription": "",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "Client app to browse wallpaper collection of MSM",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}

		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"fullscreen": false,
				"height": 800,
				"resizable": true,
				"title": "MSM Wallpaper Client",
				"width": 1100,
				"center": true,
				"theme": "Dark",
				"transparent": true,
				"decorations": false,
				"minWidth": 300
			}
		]
	}
}
